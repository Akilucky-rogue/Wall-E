rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ========== USER COLLECTIONS ==========
    // Only users can access their own documents
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth.uid == userId;
    }
    
    // ========== TRANSACTION RULES ==========
    match /users/{userId}/transactions/{transactionId} {
      // Users can only read/write their own transactions
      allow read: if request.auth.uid == userId;
      allow write: if request.auth.uid == userId;
      
      // Extra validation on create
      allow create: if request.auth.uid == userId &&
                       request.resource.data.userId == userId &&
                       request.resource.data.amount > 0 &&
                       request.resource.data.type in ['INCOME', 'EXPENSE'] &&
                       request.resource.data.category is string;
      
      // Extra validation on update
      allow update: if request.auth.uid == userId &&
                       request.resource.data.amount > 0 &&
                       request.resource.data.type in ['INCOME', 'EXPENSE'];
      
      // Only owner can delete
      allow delete: if request.auth.uid == userId;
    }
    
    // ========== SETTINGS RULES ==========
    match /users/{userId}/settings/{document=**} {
      // Users can read/write their own settings
      allow read, write: if request.auth.uid == userId;
    }
    
    // ========== USER PROFILE RULES ==========
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }
    
  }
}

// ========== HOW TO DEPLOY ==========
// 1. Install Firebase CLI: npm install -g firebase-tools
// 2. Login: firebase login
// 3. Save this as firestore.rules in your project root
// 4. Deploy: firebase deploy --only firestore:rules
// 5. Check console: firebase console -> Firestore -> Rules
// ===================================
